<h1 class="text-center mt-4"> Log In </h1>

<div class="container text-center">
<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter Email" %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter a password" %>
  </p>

  <p>
    <%= link_to "Cancel", users_path, class: "btn btn-outline-dark" %>
    <%= f.submit "Log In", class: "btn btn-outline-primary" %>
  </p>
</div>
<% end %>
